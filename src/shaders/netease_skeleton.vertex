attribute mediump vec4 POSITION;
attribute float BONEID_0;
attribute vec4 COLOR;

varying vec4 vertColor;

void main()
{
    MAT4 boneMat = GetBoneMatForNetease(int(BONEID_0));

    POS4 pos = WORLDVIEWPROJ * boneMat * POSITION;

    vertColor = COLOR;

    gl_Position = pos;
}